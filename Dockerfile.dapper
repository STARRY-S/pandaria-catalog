FROM registry.suse.com/bci/golang:1.19

RUN mkdir -p /source
ENV DAPPER_ENV ALIYUN_ACCESS_KEY_ID ALIYUN_SECRET_ACCESS_KEY ALIYUN_BUCKET ALIYUN_ENDPOINT VERSION_FOLDER_ACCESS LOGO_FOLDER_ACCESS OSSUTIL_VERSION LOGO_FOLDER
ENV DAPPER_DOCKER_SOCKET true
ENV DAPPER_SOURCE /source
WORKDIR ${DAPPER_SOURCE}

RUN zypper -n install make wget curl tar patch git && zypper clean
